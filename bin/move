#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]
puts "Welcome to Tic Tac Toe!"
puts "Where would you like to move? the top left square is #1, The bottom left square is #9"
first_move = gets.strip
user_move = input_to_index(first_move)
move(board, user_move)
display_board(board)
